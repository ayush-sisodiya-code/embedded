            </div>
            <!-- master college list container (always visible) -->
            <div id="allCollegesContainer" style="margin-top: 2rem;">
                <h4>All B.Tech / Medical / AIIMS / IIM colleges</h4>
                <div class="college-grid" id="masterCollegeGrid"></div>
            </div>
        </div>
    </div>

    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init({ duration: 800, once: false, offset: 60 });

        // Extended college database with categories
        const collegeDB = [
            { name: "IIT Bombay", cat: "iit" },
            { name: "IIT Delhi", cat: "iit" },
            { name: "IIT Kanpur", cat: "iit" },
            { name: "IIT Kharagpur", cat: "iit" },
            { name: "IIT Madras", cat: "iit" },
            { name: "IIT Roorkee", cat: "iit" },
            { name: "NIT Trichy", cat: "iit" },
            { name: "NIT Surathkal", cat: "iit" },
            { name: "NIT Warangal", cat: "iit" },
            { name: "NIT Calicut", cat: "iit" },
            { name: "AIIMS Delhi", cat: "aiims" },
            { name: "AIIMS Nagpur", cat: "aiims" },
            { name: "AIIMS Rishikesh", cat: "aiims" },
            { name: "JIPMER", cat: "aiims" },
            { name: "Armed Forces Medical", cat: "aiims" },
            { name: "Maulana Azad Medical", cat: "aiims" },
            { name: "BHU Medical", cat: "aiims" },
            { name: "IIM Ahmedabad", cat: "iim" },
            { name: "IIM Bangalore", cat: "iim" },
            { name: "IIM Calcutta", cat: "iim" },
            { name: "IIM Lucknow", cat: "iim" },
            { name: "IIM Indore", cat: "iim" },
            { name: "JNU", cat: "arts" },
            { name: "BCE BHAGALPUR", cat: "iit" },
            { name: "IIIT BHAGALPUR", cat: "iit" },
            { name: "NID Ahmedabad", cat: "arts" },
            { name: "Srishti Institute", cat: "arts" }
        ];

        const liveMentors = [
            { name: "Rahul Sharma", type: "IITian", college: "IIT Bombay", branch: "CSE", available: true },
            { name: "Anjali Patel", type: "AIIMS", college: "AIIMS Delhi", branch: "Cardiology", available: true },
            { name: "Karan Mehta", type: "IIM", college: "IIM Ahmedabad", branch: "Finance", available: true },
            { name: "Priya Nair", type: "Artist", college: "NID", branch: "Visual Arts", available: true },
            { name: "Dr. Sneha Iyer", type: "AIIMS", college: "AIIMS Nagpur", branch: "Medicine", available: true },
        ];
        const scheduleMentors = [
            { name: "Vikram Singh", type: "IITian", college: "IIT Kanpur", branch: "Mechanical", slots: ["tomorrow 10am", "fri 4pm"] },
            { name: "Dr. Arjun", type: "AIIMS", college: "AIIMS Rishikesh", branch: "Medicine", slots: ["today 8pm", "sat 11am"] },
        ];

        // overlay references
        const findOverlay = document.getElementById('findMentorPage');
        const becomeOverlay = document.getElementById('becomeMentorPage');
        const notesOverlay = document.getElementById('notesPage');

        document.getElementById('findMentorBtn').addEventListener('click', ()=>{
            findOverlay.style.display = 'flex';
            renderLiveMentors();
        });
        document.getElementById('becomeMentorBtn').addEventListener('click', ()=>{
            becomeOverlay.style.display = 'flex';
        });
        document.getElementById('notesCta').addEventListener('click', ()=>{
            notesOverlay.style.display = 'flex';
            showAllColleges(); // show all initially
        });
        document.getElementById('openNotesPageBtn').addEventListener('click', (e)=>{
            e.stopPropagation();
            notesOverlay.style.display = 'flex';
            showAllColleges();
        });

        // close buttons
        document.getElementById('closeFindMentor').addEventListener('click', ()=> findOverlay.style.display='none');
        document.getElementById('closeBecomeMentor').addEventListener('click', ()=> becomeOverlay.style.display='none');
        document.getElementById('closeNotesPage').addEventListener('click', ()=> notesOverlay.style.display='none');

        // category cards open find mentor page
        document.querySelectorAll('.mentor-card-small, .mentor-cat-card').forEach(el => {
            el.addEventListener('click', (e) => {
                findOverlay.style.display = 'flex';
                renderLiveMentors();
            });
        });

        function renderLiveMentors() {
            const liveDiv = document.getElementById('liveMentorList');
            const scheduleDiv = document.getElementById('scheduleMentorList');
            if (!liveDiv) return;
            liveDiv.innerHTML = '';
            scheduleDiv.innerHTML = '';
            liveMentors.forEach(m => {
                if (m.available) {
                    liveDiv.innerHTML += `<div class="mentor-item"><span><strong>${m.name}</strong> (${m.type}) ¬∑ ${m.college} ¬∑ ${m.branch}</span><button class="book-btn">Instant book</button></div>`;
                }
            });
            scheduleMentors.forEach(m => {
                scheduleDiv.innerHTML += `<div class="mentor-item"><span><strong>${m.name}</strong> ${m.college} ¬∑ ${m.branch}</span> <select class="schedule-select"><option>${m.slots[0]}</option><option>${m.slots[1]}</option></select> <button class="book-btn">Schedule</button></div>`;
            });
        }

        // display all colleges in master grid
        function showAllColleges() {
            const masterGrid = document.getElementById('masterCollegeGrid');
            if (masterGrid) {
                masterGrid.innerHTML = collegeDB.map(c => `<div class="college-item" data-cat="${c.cat}">${c.name}</div>`).join('');
            }
            // also set see notes grid to all by default
            filterCollegeList('all');
        }

        // filter college list based on category
        function filterCollegeList(category) {
            const seeGrid = document.getElementById('collegeList');
            if (!seeGrid) return;
            const filtered = category === 'all' ? collegeDB : collegeDB.filter(c => c.cat === category);
            seeGrid.innerHTML = filtered.map(c => `<div class="college-item" data-cat="${c.cat}">${c.name}</div>`).join('');
        }

        // toggle add/see notes
        document.getElementById('showAddNotes').addEventListener('click', ()=>{
            document.getElementById('addNotesSection').style.display = 'block';
            document.getElementById('seeNotesSection').style.display = 'none';
        });
        document.getElementById('showSeeNotes').addEventListener('click', ()=>{
            document.getElementById('seeNotesSection').style.display = 'block';
            document.getElementById('addNotesSection').style.display = 'none';
            filterCollegeList('all'); // default all
        });

        // filter pills inside notes page
        document.querySelectorAll('.filter-college').forEach(pill => {
            pill.addEventListener('click', (e) => {
                const filter = e.target.getAttribute('data-filter');
                filterCollegeList(filter);
            });
        });

        // close overlay when clicking outside
        window.addEventListener('click', (e) => {
            if (e.target.classList.contains('page-overlay')) {
                e.target.style.display = 'none';
            }
        });

        // initial master load
        showAllColleges();
    </script>
</body>
</html>
